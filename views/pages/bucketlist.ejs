<!DOCTYPE html>
<html>
    <head>
      <% include ../partials/header.ejs %>
      <script type="text/javascript" src="/js/bucketlist.js"></script>
    </head>

    <body>
        <div class="container">
            <% include ../partials/nav.ejs %>

            <div class="row">
                <div class="col-md-6 offset-md-3 col-sm-12">
                    <div class="jumbotron" style="margin-top: 0%;">
                        <div class="container">
                            <h1>Weclome to Bucketlist!</h1>
                            <div class="col-md-12">
                                <p>Here is the list of restaurants you saved! </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Your Bucket List</h4>
                            <h6 class="card-subtitle text-muted">
                                <span class="tag tag-default tag-pill" id="number_of_results"><%= restaurants.length %></span>
                            </h6>
                            <table class="table table-striped table-hover" style="text-align: left" id="yelp_table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Rating</th>
                                        <th>Category</th>
                                        <th>Address</th>
                                        <th>Remove from List</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% for(var i = 0; i < restaurants.length; ++i) { %>
                                    <tr tabindex="<%= i %>" class="list_table_row">
                                        <td hidden id="list_yelp_id_<%= i%>"><%= restaurants[i].yelp_id %></td>
                                        <td><a href="<%= restaurants[i].url %>"><%= restaurants[i].name %></a></td>
                                        <td><img src="<%= restaurants[i].rating_img_url %>"></td>
                                        <td>
                                        <% for(var j = 0; j < restaurants[i].categories.length; ++j) { %>
                                        <%= restaurants[i].categories[j] %>,
                                        <% } %>
                                        </td>
                                        <td><a href="https://www.google.com/maps?q=<%= encodeURIComponent(restaurants[i].address) %>" target="_blank"><%= restaurants[i].address %></a></td>
                                        <td>
                                            <form action="javascript:void(0);">
                                                <button type="submit" class="btn btn-outline-danger" tabindex="<%= i %>" id="remove_from_list_btn">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
