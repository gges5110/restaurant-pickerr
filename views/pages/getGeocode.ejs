<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
    <script type="text/javascript" src="/js/geolocation.js"></script>
</head>

<body>



  <div class="container center-align">
    <% include ../partials/nav.ejs %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1>Get Address from Geocode.</h1>
        </div>
        <div class="panel-body">
          <form id="geocoding_form" class="form-horizontal">
            <div class="form-group">
              <label for="lat_input" class="col-sm-2 col-sm-offset-2 control-label">Latitude</label>
              <div class="col-sm-6">
                <input type="number" id="lat_input" name="lat" class="form-control" placeholder="Enter your latitude here.">
              </div>
            </div>
            <div class="form-group">
              <label for="lng_input" class="col-sm-2 col-sm-offset-2 control-label">Longitude</label>
              <div class="col-sm-6">
                <input type="number" id="lng_input" name="long" class="form-control" placeholder="Enter your longitude here.">
              </div>
            </div>

            <button type="button" id="submit_btn" class="btn btn-info">Submit</button>
          </form>
        </div>
      </div>


      <div class="col-md-10 col-md-offset-1">
        <table class="table table-striped table-hover" style="text-align: left" id="geo_table">
          <thead>
            <tr>
              <th>Address</th>
              <th>Zipcode</th>
              <th>City</th>
              <th>State</th>
            </tr>
          </thead>

          <tbody>
          </tbody>
        </table>
      </div>

  </div>

  <script type="text/javascript" src="/js/getGeocode.js">
  </script>

</body>

</html>
