<!DOCTYPE html>
<html lang="en">
    <head>
      <% include ../partials/header.ejs %>
      <script type="text/javascript" src="/js/manage_shared_list.js"></script>
    </head>

    <body>

        <div class="container">
        <% include ../partials/nav.ejs %>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Your Shared Lists</h4>
                    </div>

                    <div class="card-block">

                        <div class="col-md-12">
                            <table class="table table-striped table-hover" id="shared_list_table_own">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Remove List</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% if (login) { %>

                                        <% for(var i = 0; i < user.sharedLists_own.length; ++i) { %>
                                        <tr tabindex="<%= i %>" class="list_table_row">
                                            <td hidden id="shared_list_table_own_id_<%= i%>"><%= user.sharedLists_own[i].id %></td>
                                            <td><a href="/shared_list?list_id=<%= user.sharedLists_own[i].id %>" id="list_name_<%= i%>"><%= user.sharedLists_own[i].name %></a></td>
                                            <td>
                                                <form action="javascript:void(0);">
                                                    <button type="submit" class="btn btn-outline-danger" tabindex="<%= i %>" id="remove_list_btn">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% } %>

                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Others Shared Lists</h4>
                    </div>

                    <div class="card-block">

                        <div class="col-md-12">
                            <table class="table table-striped table-hover" id="shared_list_table_edit">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Owner</th>
                                        <th>Remove List</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% if (login) { %>
                                        <% for(var i = 0; i < user.sharedLists_edit.length; ++i) { %>
                                        <tr tabindex="<%= i %>" class="list_table_row">
                                            <td hidden id="shared_list_table_edit_id_<%= i%>"><%= user.sharedLists_edit[i].id %></td>
                                            <td><a href="/shared_list?list_id=<%= user.sharedLists_edit[i].id %>" id="list_name_<%= i%>"><%= user.sharedLists_edit[i].name %></a></td>
                                            <td><%= user.sharedLists_edit[i].owner.name %></td>
                                            <td>
                                                <form action="javascript:void(0);">
                                                    <button type="submit" class="btn btn-outline-danger" tabindex="<%= i %>" id="remove_list_btn">Leave Group</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% } %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Shared Lists</h4>
                    </div>

                    <div class="card-block">

                        <div class="col-md-12">

                            <form class="form-control" action="javascript:void(0);">
                                <div class="form-group">
                                    <label for="add_shared_list_input" class="control-label">Name</label>
                                    <input type="text" id="add_shared_list_input" name="add_shared_list_input" class="form-control"></input>
                                </div>

                                <button type="submit" class="btn btn-outline-success" id="add_shared_list_btn">Add List</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Are you sure?
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="leave_group_modal_btn">Leave Group</button>
              </div>
            </div>
          </div>
        </div>



        <script type="text/javascript">
            $(document).ready(function () {
                $(".nav li").removeClass("active");
                $('#nav_li_manage_shared_list').addClass('active');
            });
        </script>
        <!-- <% include ../partials/footer.ejs %> -->
    </body>
</html>
