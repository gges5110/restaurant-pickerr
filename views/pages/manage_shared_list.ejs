<!DOCTYPE html>
<html lang="en">
    <head>
      <% include ../partials/header.ejs %>
      <script type="text/javascript" src="/js/manage_shared_list.js"></script>
    </head>

    <body>

        <div class="container">
        <% include ../partials/nav.ejs %>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Your Shared Lists</h4>
                    </div>

                    <div class="card-block">

                        <div class="col-md-12">
                            <!-- <p class="card-title">This page shows the nearby restaurants from Yelp!</p> -->
                            <table class="table table-striped table-hover" style="text-align: left" id="yelp_table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Remove List</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% if (login) { %>

                                    <% for(var i = 0; i < sharedLists.length; ++i) { %>
                                    <tr tabindex="<%= i %>" class="list_table_row">
                                        <td hidden id="list_id_<%= i%>"><%= sharedLists[i].id %></td>
                                        <td><a href="/shared_list?list_id=<%= sharedLists[i].id %>" id="list_name_<%= i%>"><%= sharedLists[i].name %></a></td>
                                        <td>
                                            <form action="javascript:void(0);">
                                                <button type="submit" class="btn btn-outline-danger" tabindex="<%= i %>" id="remove_list_btn">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% } %>

                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Shared Lists</h4>
                    </div>

                    <div class="card-block">

                        <div class="col-md-12">

                            <form class="form-control" action="javascript:void(0);">
                                <div class="form-group">
                                    <label for="add_shared_list_input" class="control-label">Name</label>
                                    <input type="text" id="add_shared_list_input" name="add_shared_list_input" class="form-control"></input>
                                </div>

                                <button type="submit" class="btn btn-outline-success" id="add_shared_list_btn">Add List</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $(".nav li").removeClass("active");//this will remove the active class from
                                           //previously active menu item
                    $('#nav_li_manage_shared_list').addClass('active');
                });
            </script>
            <!-- <% include ../partials/footer.ejs %> -->
    </body>
</html>
